<h1>Listing Unities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>Number</th>
      <th>Neighborhood</th>
      <th>City</th>
      <th>State</th>
      <th>Phone 1</th>
      <th>Phone 2</th>
      <th>School</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unities.each do |unity| %>
      <tr>
        <td><%= unity.name %></td>
        <td><%= unity.street %></td>
        <td><%= unity.number %></td>
        <td><%= unity.neighborhood %></td>
        <td><%= unity.city %></td>
        <td><%= unity.state %></td>
        <td><%= unity.phone_1 %></td>
        <td><%= unity.phone_2 %></td>
        <td><%= unity.school.name %></td>
        <td><%= unity.active %></td>
        <td><%= link_to 'Show', unity %></td>
        <td><%= link_to 'Edit', edit_unity_path(unity) %></td>
        <td><%= link_to 'Destroy', unity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

