<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
  <li class=""><i class="fa fa-home" aria-hidden="true"></i> <a href="/">Home</a></li>
  <li class=""><i class="fa fa-bank" aria-hidden="true"></i> Escolas</li>
</ol>

<div class="col-lg-4 pull-left">
    <div class="row">
        <h3 style="margin: 0px;"><i class="fa fa-list" aria-hidden="true"></i> Lista de Escolas</h3>
    </div>
</div>

<div class="form-group pull-right">
  <%= link_to 'Nova Escola', new_school_path, class: 'btn btn-success' %>
</div>
<div class="clearfix"></div>

<hr/>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>NOME</th>
      <th>CNPJ</th>
      <th>ATIVO</th>
      <th colspan="3">AÇÕES</th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.cnpj %></td>
        <td>
          <% if school.active %>
            Ativo
          <% else %>
            Inativo
          <% end %>
        </td>
        <td><%= link_to '', school, class: 'fa fa-eye' %></td>
        <td><%= link_to '', edit_school_path(school), class: 'fa fa-pencil' %></td>
        <td><%= link_to '', school, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @schools %>
