<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nome" %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :age, "Idade" %><br>
    <%= f.number_field :age, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :sex, "Sexo" %><br>
    <%= f.select :sex, Student.sexes.keys, prompt: 'Selecione' %>
  </div>
  <div class="form-group">
    <%= f.label :registration, "Matricula" %><br>
    <%= f.text_field :registration, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>Turmas</label><br>
    <%= f.fields_for :studentclasses do |s| %>
      <% @classrooms.each do |c| %>
        <input type="checkbox" name="student[studentclasses][classroom_id]" value="<%= c.id %>">
        <%= c.name %>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :active, "Ativo" %><br>
    <%= f.check_box :active %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
    <%= link_to 'Voltar', students_path, class: 'btn btn-info' %>
  </div>
<% end %>
