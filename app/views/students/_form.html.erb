<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :sex %><br>
    <%= f.select :sex, Student.sexes.keys, prompt: 'Selecione' %>
  </div>
  <div class="field">
    <%= f.label :parent_one %><br>
    <%= f.select :parent_one, @parent.collect {|p| [ p.name, p.id ] }, {prompt: 'Selecione'} %>
  </div>
  <div class="field">
    <%= f.label :parent_two %><br>
    <%= f.select :parent_two, @parent.collect {|p| [ p.name, p.id ] }, {prompt: 'Selecione'} %>
  </div>
  <div class="field">
    <%= f.label :registration %><br>
    <%= f.text_field :registration %>
  </div>
  <div class="field">
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
