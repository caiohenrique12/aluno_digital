<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
  <li class=""><i class="fa fa-home" aria-hidden="true"></i> <a href="/">Home</a></li>
  <li class=""><i class="fa fa-graduation-cap" aria-hidden="true"></i> Alunos</li>
</ol>

<div class="col-lg-4 pull-left">
    <div class="row">
        <h3 style="margin: 0px;"><i class="fa fa-list" aria-hidden="true"></i> Lista de Alunos</h3>
    </div>
</div>
<div class="form-group pull-right">
  <%= link_to 'Novo Aluno', new_student_path, class: 'btn btn-success' %>
</div>

<div class="clearfix"></div>
<hr/>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>NOME</th>
      <th>IDADE</th>
      <th>SEXO</th>
      <th>MATRICULA</th>
      <th>ATIVOS</th>
      <th colspan="3">AÇÕES</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.sex %></td>
        <td><%= student.registration %></td>
        <td>
          <% if student.active %>
            Ativo
          <% else %>
            Inativo
          <% end %>
        </td>
        <td><%= link_to '', student, class: 'fa fa-eye'  %></td>
        <td><%= link_to '', edit_student_path(student), class: 'fa fa-pencil' %></td>
        <td><%= link_to '', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-trash' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @students %>
